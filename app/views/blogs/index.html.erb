<p id="notice"><%= notice %></p>

<h1>ブログ一覧</h1>

<table>
    <tr>
      <th>名前</th>
      <th>タイトル</th>
      <th>内容</th>
    </tr>

    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細', blog_path(blog.id) %></td>
        <td><%= link_to '編集', edit_blog_path(blog.id) %></td>
        <td><%= link_to '削除', blog_path(blog.id), method: :delete  %></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
