<h3>以下の内容で送信しますか？</h3>

<%= form_with(model: @blog, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <p>名前：<%= @blog.name %></p>
  <p>タイトル：<%= @blog.title %></p>
  <p>本文：<%= @blog.content %></p>
  <%= form.submit "登録する" %>
  <%= form.submit '戻る', name: 'back' %>
<% end %>
